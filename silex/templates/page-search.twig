{% extends "page.twig" %}

{% block content %}

  {# Search form #}

  <form action="/search" method="get">
    <input type="search" name="query" placeholder="Search" />
    <input type="submit" value="Search" />
  </form>

  <p>{{ result_count }} results found.</p>

  <ul>
    {% for row in results %}
        <li>
            {{ row.entity_id }}<br>
            {{ row.path_alias }}<br>
            {{ row.label }}<br>
            {{ row.teaser }}
        </li>
    {% endfor %}
  </ul>
{% endblock %}
